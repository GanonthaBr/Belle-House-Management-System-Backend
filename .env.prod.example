# =============================================================================
# Belle House Backend - Production Environment Variables Template
# =============================================================================
# Copy this to .env.prod on your production server

# -----------------------------------------------------------------------------
# Django Core Settings
# -----------------------------------------------------------------------------
SECRET_KEY=generate-a-strong-50-char-random-key
DEBUG=False
ALLOWED_HOSTS=api.bellehouse.ne,www.api.bellehouse.ne

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_URL=postgres://bellehouse:your-secure-db-password@db:5432/bellehouse_db
POSTGRES_USER=bellehouse
POSTGRES_PASSWORD=your-secure-db-password
POSTGRES_DB=bellehouse_db

# -----------------------------------------------------------------------------
# CORS - Production Frontend Domains
# -----------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=https://bellehouse.ne,https://www.bellehouse.ne,https://app.bellehouse.ne

# -----------------------------------------------------------------------------
# JWT Token Configuration
# -----------------------------------------------------------------------------
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=30
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# -----------------------------------------------------------------------------
# Email Configuration (Production SMTP)
# -----------------------------------------------------------------------------
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=notifications@bellehouse.ne
EMAIL_HOST_PASSWORD=your-email-app-password
DEFAULT_FROM_EMAIL=Belle House <notifications@bellehouse.ne>

# -----------------------------------------------------------------------------
# Firebase Cloud Messaging
# -----------------------------------------------------------------------------
FIREBASE_CREDENTIALS_PATH=/app/firebase-credentials.json

# -----------------------------------------------------------------------------
# Media Storage (Cloudinary)
# -----------------------------------------------------------------------------
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud
CLOUDINARY_API_KEY=your-cloudinary-key
CLOUDINARY_API_SECRET=your-cloudinary-secret

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

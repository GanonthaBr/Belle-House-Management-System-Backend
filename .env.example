# =============================================================================
# Belle House Backend - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# -----------------------------------------------------------------------------
# Django Core Settings
# -----------------------------------------------------------------------------
SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,api.bellehouse.ne

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# SQLite is used by default for development (no config needed)
# For PostgreSQL (production), set DATABASE_URL:
# DATABASE_URL=postgres://user:password@localhost:5432/bellehouse_db

# Docker PostgreSQL settings
POSTGRES_USER=bellehouse
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=bellehouse_db

# -----------------------------------------------------------------------------
# CORS - Frontend Domains
# -----------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://bellehouse.ne,https://app.bellehouse.ne

# -----------------------------------------------------------------------------
# JWT Token Configuration
# -----------------------------------------------------------------------------
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# -----------------------------------------------------------------------------
# Email Configuration
# -----------------------------------------------------------------------------
# Development: Use console backend (emails printed to terminal)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Production: Use SMTP (Gmail example)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=Belle House <noreply@bellehouse.ne>

# -----------------------------------------------------------------------------
# Firebase Cloud Messaging (Push Notifications)
# -----------------------------------------------------------------------------
# Path to Firebase service account credentials JSON file
# FIREBASE_CREDENTIALS_PATH=/app/firebase-credentials.json

# -----------------------------------------------------------------------------
# Media Storage
# -----------------------------------------------------------------------------
# Development: Local filesystem (default)
# Production: Cloudinary
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# -----------------------------------------------------------------------------
# Security (Production Only)
# -----------------------------------------------------------------------------
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
